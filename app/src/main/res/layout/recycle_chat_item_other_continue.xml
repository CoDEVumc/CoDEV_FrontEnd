<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="40dp">

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="254dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="46dp"
        style="@style/Text.Body5.Regular"
        android:textColor="@color/white"
        android:background="@drawable/chat_speech_balloon_other_continue_background"
        android:text=""/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="@+id/chat"
        android:layout_marginStart="4dp"
        style="@style/Text.Body6.Medium"
        android:textColor="@color/black_500"
        android:text="오후 1:06"/>
</androidx.constraintlayout.widget.ConstraintLayout>