<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="24dp">

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="254dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Text.Body5.Regular"
        android:textColor="@color/black_900"
        android:background="@drawable/chat_speech_balloon_my_first_background"
        android:text=""/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintBottom_toBottomOf="@+id/chat"
        android:layout_marginEnd="4dp"
        style="@style/Text.Body6.Medium"
        android:textColor="@color/black_500"
        android:text="오후 1:06"/>

</androidx.constraintlayout.widget.ConstraintLayout>