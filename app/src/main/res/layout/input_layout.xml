<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/input_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dropdown_round"/>

    <EditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/input_round"
        app:layout_constraintBottom_toBottomOf="@id/input_round"
        app:layout_constraintLeft_toLeftOf="@id/input_round"
        android:layout_marginStart="14dp"
        android:hint="testing"
        style="@style/Text.Body4.Medium"
        android:textColor="@color/black_900"
        android:background="@null"
        />



</androidx.constraintlayout.widget.ConstraintLayout>