<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dropdown_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dropdown_round"/>


    <ImageView
        android:id="@+id/dropdown_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dropdown_round"
        app:layout_constraintBottom_toBottomOf="@id/dropdown_round"
        app:layout_constraintRight_toRightOf="@id/dropdown_round"
        android:layout_marginEnd="14dp"
        android:src="@drawable/dropdown_icon"/>

    <TextView
        android:id="@+id/dropdown_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dropdown_round"
        app:layout_constraintBottom_toBottomOf="@id/dropdown_round"
        app:layout_constraintLeft_toLeftOf="@id/dropdown_round"
        android:layout_marginStart="14dp"
        android:text="testing"
        style="@style/Text.Body4.Medium"
        android:textColor="@color/green_900"
        />



</androidx.constraintlayout.widget.ConstraintLayout>